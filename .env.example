# VERDICT Environment Variables Template
# Copy this file to .env and fill in the values

# ============================================
# Data Paths
# ============================================
# Path to MIMIC-CXR dataset (after PhysioNet credentialing)
MIMIC_CXR_DIR=/path/to/mimic-cxr-jpg
MIMIC_CXR_REPORTS_DIR=/path/to/mimic-cxr-reports

# ============================================
# Model Paths
# ============================================
# HuggingFace cache directory (optional, for offline use)
HF_HOME=/path/to/huggingface/cache
TRANSFORMERS_CACHE=/path/to/transformers/cache

# ============================================
# Experiment Tracking
# ============================================
# Weights & Biases
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=verdict
WANDB_ENTITY=your_wandb_username

# ============================================
# Compute Resources
# ============================================
# CUDA devices to use (comma-separated for multi-GPU)
CUDA_VISIBLE_DEVICES=0

# Number of workers for data loading
NUM_WORKERS=4

# ============================================
# Reproducibility
# ============================================
# Default random seed
SEED=42

# ============================================
# Output Paths
# ============================================
# Directory for experiment outputs
OUTPUT_DIR=./outputs

# Directory for logs
LOG_DIR=./outputs/logs

# Directory for checkpoints
CHECKPOINT_DIR=./outputs/checkpoints
